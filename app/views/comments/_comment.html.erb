<section class="tr_border_bottom">
	<span class="content"> 
		<%= gravatar_for comment.user %> <%= comment.user.fio %>
		<span class="timestamp">
			<% if comment.created_at == comment.updated_at %> 
				Добавлено: <%= time_ago_in_words(comment.created_at) %> назад
			<% else %> 
				Обновлено: <%= time_ago_in_words(comment.updated_at) %> назад
			<% end %>
		</span>
	</span>
	
	<% if current_user?(comment.user) %>
		<%= dynaspan_text_field(comment, comment, :text, "Редактировать") %>
		<br>
		<span class="li_right">
			<%= link_to "Удалить", [comment.article, comment], method: :delete,
										data: { confirm: "Вы уверены?" } %>
		</span>
	<% else %>
		<span> <%= comment.text %> </span>
	<% end %>	
</section>

