<% provide(:title, 'Sign up') %>
<h1>Форма регистрации</h1>

<div class="row">
	<div class="span6 offset3">
		<%= simple_form_for(@user) do |f| %>
			<%= render 'shared/error_messages' %>
			
			<%= f.label :fio %>
			<%= f.text_field :fio %>

			<%= f.label :dateBirth %>
			<%= f.date_field :dateBirth %>

			<%= f.label :sex %>
			<%= f.select :sex, [
	            ["Мужской", "male"],
	            ["Женский", "female"]
    		] %>

			<%= f.label :email %>
			<%= f.email_field :email %>

			<%= f.label :password %>
			<%= f.password_field :password %>

			<%= f.label :password_confirmation %>
			<%= f.password_field :password_confirmation %>

			<%= f.submit "Создать аккаунт", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>