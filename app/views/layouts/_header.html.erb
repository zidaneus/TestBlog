<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Тест блог", root_path, id: "logo" %>
      <nav>
        <ul class="nav nav-pills">
          <li><%= link_to "Статьи", root_path %></li>
          <% if signed_in? %>
            <li><%= link_to 'Новая статья', new_article_path %></li>
            <li><%= link_to "Пользователи", users_path %></li>
            <ul class="nav nav-pills nav-right">
              <li id="fio_header"><%= gravatar_for current_user %> <%= truncate(current_user.fio, :length => 25) %></li>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Профиль <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Мои статьи", current_user %></li>
                  <li><%= link_to "Настройки", edit_user_path(current_user) %></li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to "Выйти", signout_path, method: "delete" %>
                  </li>
                </ul>
              </li>
            </ul>
          <% else %>
            <ul class="nav nav-pills nav-right">
              <li><%= link_to "Войти/зарегистрироваться", signin_path %></li>
            </ul>
          <% end %>
          <%= form_tag("/search", method: "get") do %>
            <li class="li_right_with_margin">  <%= submit_tag("Поиск") %> </li>
            <li class="li_right_with_margin">  <%= text_field_tag(:search) %> </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>