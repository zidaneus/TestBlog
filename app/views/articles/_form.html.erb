<%= simple_form_for @article do |f| %>
	<% if @article.errors.any? %>
		<div id="error_explanation">
			Количество ошибок при сохранении статьи: <%= @article.errors.count %>
			<ul>
				<% @article.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :text %><br>
		<%= f.cktext_area :text, rows: 10 %>
	</p>

	<p>
		<%= f.submit "Сохранить статью", class: "btn btn-large btn-primary" %>
	</p>
<% end %>